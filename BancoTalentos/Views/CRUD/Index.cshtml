@model IEnumerable<BancoTalentos.Models.Candidato>

<p>
    @Html.ActionLink("Novo Candidato", "Create","", new {@class= "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-responsive text-center">
    <tr>
        <th class="text-center">
            Nome
        </th>
        <th class="text-center">
            Email
        </th>
        <th class="text-center">
            Cidade
        </th>
        <th class="text-center">
            Estado
        </th>
        <th class="text-center"></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
		<td>
			@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
			@Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
			@Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
			@Html.ActionLink("PDF", "Download", new { id = item.Id }, new { @class = "btn btn-warning" })

		</td>
    </tr>
}
    
</table>

